    link(rel="stylesheet", href="/static/styles/snake.css")

block scripts
    script(src="/static/scripts/keys.js")
    script(src="/static/scripts/snake.js")

block content
    div.menu.menu-visible
        div.info
            span#info-text Press enter to start
        div.point-container
