    div.bottom-banner.banner
        span#point-mini 0

        div.live-info
            div.live
            div.live
            div.live
        
        div.direct-container
            div.left-direct(data="left" onclick="detectKey('LEFT')")
            div.top-direct(data="top" onclick="detectKey('TOP')")
            div.right-direct(data="right" onclick="detectKey('RIGHT')")
            div.bottom-direct(data="bottom" onclick="detectKey('BOTTOM')")

            div.enter-bottom(data="enter" onclick="detectKey('ENTER')") ENTER
            div.esc-bottom(data="enter" onclick="detectKey('ESC')") ESC
        